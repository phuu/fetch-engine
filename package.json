{
  "name": "fetch-engine",
  "description": "A smart request-making library that makes sure your Javascript client is a good citizen of your distributed system.",
  "main": "dist/fetch-engine-node.js",
  "browser": "dist/fetch-engine-browser.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && tsc",
    "watch": "npm run clean && tsc --watch",
    "test": "npm run specs && npm run lint",
    "lint": "find src -name '*.ts' | xargs tslint",
    "specs": "jest",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.test.ts"
    ],
    "testEnvironmentOptions": {
      "url": "http://localhost:15000"
    }
  },
  "files": [
    "dist"
  ],
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tgvashworth/fetch-engine.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tgvashworth/fetch-engine/issues"
  },
  "homepage": "https://github.com/tgvashworth/fetch-engine#readme",
  "devDependencies": {
    "@types/es6-promise": "^0.0.33",
    "@types/jest": "^23.1.3",
    "@types/node": "^8.5.2",
    "@types/tape": "^4.2.31",
    "boom": "^4.2.0",
    "es6-promise": "^4.0.5",
    "ghooks": "^1.2.0",
    "hapi": "^15.1.1",
    "jest": "^23.2.0",
    "npm-check": "^5.2.1",
    "require-globify": "^1.3.0",
    "semantic-release": "^4.3.5",
    "tap-min": "^1.1.0",
    "tape": "^4.4.0",
    "tape-run": "^2.1.3",
    "ts-jest": "^22.4.6",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "typings": "^1.0.4",
    "url": "^0.11.0",
    "whatwg-fetch": "^2.0.4",
    "yargs": "^6.1.1"
  },
  "dependencies": {}
}
